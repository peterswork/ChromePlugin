{
  "manifest_version": 2,

  "name": "ClearBaidu",
  "description": "block the baidu ads",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  
  "permissions": [
    "tabs",
	"webNavigation",
    "https://www.baidu.com/*"
  ],
  
  "background": {
    "scripts": ["background.js"]
  }
}
